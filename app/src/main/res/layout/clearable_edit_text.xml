<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp" >

    <RelativeLayout
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <EditText
            android:id="@+id/clearable_edit"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#FFFFFF"
            android:hint="search by name or DabName"
            android:imeOptions="actionSearch"
            android:fontFamily="HelveticaNeue-Medium.otf"
            android:inputType="text"
            android:textColor="#4D4D4D"
            android:textSize="17sp" />

        <Button
            android:id="@+id/clearable_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/clearable_edit"
            android:background="@drawable/x_clear_search_text" />

        <com.dabkick.CustomText
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/clearable_button_clear"
            android:fontFamily="HelveticaNeue-Medium.otf"
            android:text=""
            android:textColor="#0085EF"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>