<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp" >

    <RelativeLayout
        android:id="@+id/layout_text"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" >

        <com.dabkick.CustomText
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="HelveticaNeue-Light.otf"
            android:text="watch media together"
            android:textColor="#4D4D4D"
            android:textSize="21sp" />

        <com.dabkick.CustomText
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:fontFamily="HelveticaNeue-Light.otf"
            android:text="with friends"
            android:textColor="#4D4D4D"
            android:textSize="21sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/notify_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/notify_on" />

        <com.dabkick.CustomText
            android:id="@+id/notify_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notify_image"
            android:layout_centerHorizontal="true"
            android:fontFamily="HelveticaNeue-Italic.otf"
            android:text="turn on push notifications"
            android:textColor="#4D4D4D"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/photos_home_btn" />

    <com.dabkick.CustomText
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="HelveticaNeue-Light.otf"
        android:layout_below="@+id/photos"
        android:text="photos"
        android:textColor="#4D4D4D"
        android:textSize="17sp" />

</RelativeLayout>