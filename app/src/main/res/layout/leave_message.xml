<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#EDECEC" >

        <com.dabkick.CustomText
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="HelveticaNeue-Light.otf"
            android:text="@string/leave_msg"
            android:textColor="#333333"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cross" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/top_bar" >

        <com.dabkick.CustomText
            android:id="@+id/friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="HelveticaNeue-Light.otf"
            android:textColor="#424242"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/friend_image"
            android:layout_width="118dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="#ECECEC" >

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:layout_margin="10dp"
            android:background="#FFFFFF" >

            <com.dabkick.CustomEditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="#FFFFFF"
                android:fontFamily="HelveticaNeue-Medium.otf"
                android:gravity="center_horizontal"
                android:textColor="#4D4D4D"
                android:textSize="13sp" >

            </com.dabkick.CustomEditText>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" >

        <RelativeLayout
            android:id="@+id/video_message"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false" >

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#99000000" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/voice_video_msg" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/lock_layout"
                android:layout_width="50dp"
                android:layout_height="50dp" >
                
                </RelativeLayout>

            <com.dabkick.CustomText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout4"
                android:fontFamily="HelveticaNeue-Medium.otf"
                android:gravity="center_horizontal"
                android:text="video message"
                android:textColor="#4D4D4D"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/add_media"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/video_message" >

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#99000000" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/add_media" />

            </RelativeLayout>

            <com.dabkick.CustomText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout5"
                android:fontFamily="HelveticaNeue-Medium.otf"
                android:gravity="center_horizontal"
                android:text="add media"
                android:textColor="#4D4D4D"
                android:textSize="11sp" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="#0D6FDF" 
        android:layout_alignParentLeft="true" >
        
        <RelativeLayout
            android:id="@+id/scrollbar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#0058BD">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_anim" />
            
        </RelativeLayout>

        <com.dabkick.CustomText
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/scrollbar"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:fontFamily="HelveticaNeue-Medium.otf"
            android:text="send message" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/send_message" />

    </RelativeLayout>

</RelativeLayout>